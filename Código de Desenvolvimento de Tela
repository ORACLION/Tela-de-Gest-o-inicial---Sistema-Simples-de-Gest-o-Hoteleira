  <script>
    
    function openAction(e, action){
      e.preventDefault();
      
      const messages = {
        reservas: 'Abrindo módulo de reservas...',
        checkin: 'Abrindo processo de check-in...',
        checkout: 'Abrindo processo de check-out...',
        quartos: 'Abrindo cadastro/gerenciamento de quartos...',
        servico: 'Abrindo lançamento de serviços...',
        relatorios: 'Gerando relatórios...'
      };
      const msg = messages[action] || 'Abrindo...';
      
      window.alert(msg);
    }

    document.querySelectorAll('.action-card').forEach(function(el){
      el.addEventListener('keydown', function(ev){
        if(ev.key === 'Enter' || ev.key === ' '){
          ev.preventDefault();
          el.click();
        }
      });
    });
  </script>
